.container {
  padding: 20px;
  background-color: #f4f4f4;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.exam-info {
  background-color: #fff;
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 30px;
}

.exam-item {
  display: flex;
  margin-bottom: 10px;
}

.exam-label {
  font-size: 16px;
  color: #666;
  width: 90px;
}

.exam-value {
  font-size: 16px;
  color: #333;
}

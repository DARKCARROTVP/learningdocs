<view class="container">
  <view class="header">
    <text class="title">考试信息</text>
  </view>

  <view class="exam-info" wx:for="{{examInfo}}" wx:key="index">
    <view class="exam-item">
      <text class="exam-label">考试科目：</text>
      <text class="exam-value">{{item.subject}}</text>
    </view>
    <view class="exam-item">
      <text class="exam-label">考试时间：</text>
      <text class="exam-value">{{item.time}}</text>
    </view>
    <view class="exam-item">
      <text class="exam-label">考试地点：</text>
      <text class="exam-value">{{item.location}}</text>
    </view>
  </view>
</view>
